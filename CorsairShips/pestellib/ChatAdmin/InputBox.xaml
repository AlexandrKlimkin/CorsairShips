<Window x:Class="ChatAdmin.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAdmin"
        mc:Ignorable="d"
        Title="InputBox" Height="169.934" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Label x:Name="lblContent" Content="Label" VerticalAlignment="Top" Height="48"/>
        <Button x:Name="btnOk" Content="OK" Margin="0,0,89.6,10" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Bottom"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,0,9.6,10" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <ComboBox x:Name="tbValue" Margin="19,53,10,0" VerticalAlignment="Top" IsEditable="True" IsTextSearchEnabled="True" IsTextSearchCaseSensitive="False"/>

    </Grid>
</Window>

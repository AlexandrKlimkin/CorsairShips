<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PackageManager" Width="300" Height="800" Padding="5">
  
  <StackPanel Name="Root" Orientation="Vertical" VerticalAlignment="Stretch">
    <StackPanel Orientation="Horizontal" Height="40" MaxHeight="40">
      <Button Name="WriteButton" Margin="5">Write batch file</Button>
      <Button Name="RunButton" Margin="5">Run batch file</Button>
    </StackPanel>
    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Height="690">
      <StackPanel Name="ContentScroller" Orientation="Vertical">
      </StackPanel>
    </ScrollViewer>
    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Height="60">
      <TextBox Name="Log" BorderThickness="1"></TextBox>
    </ScrollViewer>
  </StackPanel>
</Window>